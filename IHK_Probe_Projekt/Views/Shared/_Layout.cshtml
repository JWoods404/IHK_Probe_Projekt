<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" img src="~/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*<a class="navbar-brand" href="#">Navbar</a>*@

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link" href="~/Home/Index"><img src="~/Content/Media/home-5-xl.png" width="30" height="30" alt="home" title="Homepage" /></a>
                </li>
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link" href="~/Home/Shop"><img src="~/Content/Media/coffee.png" width="30" height="30" alt="shop" title="Shop" /></a>
                </li>
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link" href="~/Home/Kalender"><img src="~/Content/Media/calendar-xl.png" width="30" height="30" alt="kalender" title="Kalender" /></a>
                </li>
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link" href="~/Home/About"><img src="~/Content/Media/info-2-xxl.png" width="30" height="30" alt="info" title="Info" /></a>
                </li>
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link" href="~/Home/Contact"><img src="~/Content/Media/phone-30-xl.png" width="30" height="30" alt="contact" title="Contact" /></a>
                </li>
                <li class="nav-item" *ngFor="let menuItem of menuItems" routerLinkActive="active">
                    <a class="nav-item nav-link navbar-toggler-right" href="~/KundeWarenkorb/Warenkorb"><img src="~/Content/Media/cart-60-xl.png" width="30" height="30" alt="warenkorb" title="Warenkorb" /></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kirchheim Kaffee</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
